<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Map">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

    </com.baidu.mapapi.map.MapView>

    <Button
        android:id="@+id/button3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignBottom="@id/bmapView"
        android:layout_alignLeft="@id/bmapView"
        android:background="@drawable/locationc" />

    <Button
        android:id="@+id/button4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/bmapView"
        android:layout_alignLeft="@id/bmapView"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/messagec" />

    <Button
        android:id="@+id/button5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/bmapView"
        android:layout_alignRight="@id/bmapView"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/refreshc" />

    <Button
        android:id="@+id/button6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/bmapView"
        android:layout_alignLeft="@id/bmapView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/myc" />

    <Button
        android:id="@+id/button7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/bmapView"
        android:layout_alignRight="@id/bmapView"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/friendc" />

    <Button
        android:id="@+id/button11"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="发起定位共享"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/bmapView"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bt_shape1"
        />

    <Button
        android:id="@+id/button12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/bmapView"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/d2c" />

    <Button
        android:id="@+id/button13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:layout_alignRight="@id/bmapView"
        android:background="@drawable/satellitec" />
</RelativeLayout>